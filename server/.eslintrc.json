{
	"env": {
		"es2020": true,
		"node": true
	},
	"extends": [
		"standard"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"semi": [
			"error",
			"always",
			{
				"omitLastInOneLineBlock": true
			}
		],
		"space-before-function-paren": [
			"error",
			"never"
		],
		"camelcase": [
			"error",
			"never"
		]
	}
}